# ===========================================
# TECH NEWSLETTER - Environment Variables
# ===========================================

# Gemini API Key (https://aistudio.google.com/app/apikey)
GEMINI_API_KEY=sua_key_aqui

# Gmail Configuration (opcional - para envio por email)
GMAIL_USER=seu.email@gmail.com
GMAIL_APP_PASSWORD=senha_app_16_digitos

# Recipient Email (opcional)
RECIPIENT_EMAIL=onde.receber@email.com
RECIPIENT_NAME=Seu Nome

# Server Configuration
PORT=3002
TZ=America/Sao_Paulo

# Cron Schedule (0 7 * * * = todo dia às 7h)
CRON_SCHEDULE=0 7 * * *

# CORS (use * para desenvolvimento, URL específica para produção)
CORS_ORIGIN=*

# Enviar email automaticamente ao gerar via API? (true/false)
SEND_EMAIL_ON_GENERATE=false

# Admin Panel Credentials
ADMIN_USER=admin
ADMIN_PASSWORD=sua_senha_segura
